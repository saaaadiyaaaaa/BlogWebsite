<%- include("partials/header"); -%>

<div class="blog">
  <h1>My Blog</h1>
  <p><%= startingContent %></p>
</div>

<% posts.forEach(function(post){ %>

<div class="content">
  <h4><%=post.title%></h4>
  <p>
    <%=post.content.substring(0, 800) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
  </p>
</div>
<% }) %>
